<!DOCTYPE html>
<html>
<head>
   <title>Currency Conversion App</title>
   <link rel="stylesheet" type="text/css" href="/index.css">
</head>
<body>
   <h1>Currency Conversion App</h1>
   <form action="/user/dashboard/convert" method="post">
       <br>
       <label for="nairaAmount">Enter Amount in Naira:</label>
       <input type="number" step="0.01" name="nairaAmount" required>

       <label for="selectedCurrency">Select Currency for Conversion:</label>
       <select name="selectedCurrency" class="select" >
           <% currencies.forEach(currency => { %>
               <option value="<%= currency %>"><%= currency %></option>
           <% }); %>
       </select>
       <br>

       <label for="customConversionRate">Enter Conversion Rate:</label>
       <input type="number" step="0.0001" name="customConversionRate" placeholder="Conversion rate in naira" required>
       <br>
       <input type="submit" value="Convert">
   </form>
</body>
</html>
